---
interface Props {
    techs?: string[];
}

const {
    techs = [
        "C#/.NET 8",
        "Astro 5.0",
        "MySQL",
        "React 18",
        "Tailwind CSS",
        "TypeScript",
        "SignalR",
    ],
} = Astro.props;

const duplicatedTechs = [...techs, ...techs];
---

<div class="w-full overflow-hidden mask-fade relative py-2">
    <div class="flex gap-4 animate-marquee w-max hover:pause">
        {
            duplicatedTechs.map((tech) => (
                <div class="px-4 py-2 bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 rounded-lg font-medium text-sm whitespace-nowrap border border-slate-200 dark:border-slate-700 shadow-sm">
                    {tech}
                </div>
            ))
        }
    </div>
</div>

<style>
    .animate-marquee {
        animation: marquee 25s linear infinite;
    }

    .mask-fade {
        mask-image: linear-gradient(
            to right,
            transparent,
            black 10%,
            black 90%,
            transparent
        );
        -webkit-mask-image: linear-gradient(
            to right,
            transparent,
            black 10%,
            black 90%,
            transparent
        );
    }

    .hover\:pause:hover {
        animation-play-state: paused;
    }

    @keyframes marquee {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }
</style>
