---
import { siteData } from "../../data/siteData";
import ProjectGallery from "../ProjectGallery.astro";
import TechMarquee from "../TechMarquee.astro";

const { portfolio } = siteData;
const { atlas } = portfolio;
---

<div id="portfolio" class="space-y-12 mb-20">
    <div
        class="tilt-card bg-white dark:bg-[#161d2b] border border-slate-200 dark:border-slate-800 rounded-2xl overflow-hidden reveal hover:shadow-2xl transition-shadow duration-500"
    >
        <div class="grid grid-cols-1 md:grid-cols-2 items-center">
            <div
                class="bg-slate-50 dark:bg-slate-900/50 order-2 md:order-1 flex items-center justify-center p-6 md:p-12 min-h-[250px] md:min-h-[300px]"
            >
                <ProjectGallery
                    projectTitle={atlas.title}
                    coverImage={atlas.coverImage}
                    galleryImages={atlas.galleryImages}
                />
            </div>
            <div class="p-6 md:p-12 order-1 md:order-2">
                <span
                    class="inline-block px-3 py-1 rounded-full bg-primary/10 text-primary text-xs font-bold tracking-widest uppercase mb-4"
                    >{atlas.type}</span
                >
                <h2
                    class="text-3xl font-bold mb-4 bg-gradient-to-r from-primary via-blue-400 to-purple-400 bg-clip-text text-transparent"
                >
                    {atlas.title}
                </h2>
                <p
                    class="text-slate-500 dark:text-slate-400 mb-8 leading-relaxed"
                >
                    {atlas.description}
                </p>
                <div class="mb-8">
                    <p
                        class="text-sm font-bold text-slate-700 dark:text-slate-200 mb-3"
                    >
                        Tecnolog√≠as Utilizadas:
                    </p>
                    <div class="-mx-6 md:mx-0">
                        <TechMarquee techs={atlas.technologies} />
                    </div>
                </div>
                <div>
                    <p
                        class="text-sm font-bold text-slate-700 dark:text-slate-200 mb-3"
                    >
                        Puntos fuertes:
                    </p>
                    <ul class="space-y-2">
                        {
                            atlas.features?.map((feature) => (
                                <li class="flex items-start gap-2 text-sm text-slate-500 dark:text-slate-400">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="text-primary size-5 mt-0.5 flex-shrink-0"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
                                        <polyline points="22 4 12 14.01 9 11.01" />
                                    </svg>
                                    {feature}
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
