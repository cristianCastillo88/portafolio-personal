---
import { siteData } from "../../data/siteData";
import TechMarquee from "../TechMarquee.astro";

const { about } = siteData;
---

<div
    class="tilt-card bg-white dark:bg-[#161d2b] border border-slate-200 dark:border-slate-800 rounded-2xl overflow-hidden reveal hover:shadow-2xl transition-shadow duration-500 mb-16"
>
    <div class="grid grid-cols-1 md:grid-cols-2 items-center">
        <div class="p-6 md:p-12">
            <span
                class="inline-block px-3 py-1 rounded-full bg-primary/10 text-primary text-xs font-bold tracking-widest uppercase mb-4"
                >{about.title}</span
            >
            <h2 class="text-3xl font-bold mb-4 bg-gradient-to-r from-primary via-blue-400 to-purple-400 bg-clip-text text-transparent">
                {about.name}
            </h2>
            <p class="text-slate-500 dark:text-slate-400 mb-8 leading-relaxed">
                {about.description}
            </p>
            <div class="mb-8">
                <p
                    class="text-sm font-bold text-slate-700 dark:text-slate-200 mb-3"
                >
                    Tecnolog√≠as:
                </p>
                <div class="-mx-6 md:mx-0">
                    <TechMarquee techs={about.technologies} />
                </div>
            </div>
            <div>
                <p
                    class="text-sm font-bold text-slate-700 dark:text-slate-200 mb-3"
                >
                    Links:
                </p>
                <div class="flex flex-wrap gap-4">
                    {
                        about.socials.map((social) => (
                            <a
                                href={social.href}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="flex items-center justify-center size-10 rounded-full bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-300 hover:bg-primary hover:text-white transition-colors"
                                aria-label={social.ariaLabel}
                                download={
                                    social.ariaLabel.includes("CV")
                                        ? "Cristian_Castillo_CV.pdf"
                                        : undefined
                                }
                                title={
                                    social.ariaLabel.includes("CV")
                                        ? "Descargar Curriculum Vitae"
                                        : undefined
                                }
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="size-5"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    {/* Handle SVGs dynamically or use hardcoded paths for now if complex */}
                                    {social.platform === "LinkedIn" && (
                                        <>
                                            <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z" />
                                            <rect
                                                width="4"
                                                height="12"
                                                x="2"
                                                y="9"
                                            />
                                            <circle cx="4" cy="4" r="2" />
                                        </>
                                    )}
                                    {social.platform === "GitHub" && (
                                        <>
                                            <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
                                            <path d="M9 18c-4.51 2-5-2-7-2" />
                                        </>
                                    )}
                                    {social.platform === "Instagram" && (
                                        <>
                                            <rect
                                                width="20"
                                                height="20"
                                                x="2"
                                                y="2"
                                                rx="5"
                                                ry="5"
                                            />
                                            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" />
                                            <line
                                                x1="17.5"
                                                x2="17.51"
                                                y1="6.5"
                                                y2="6.5"
                                            />
                                        </>
                                    )}
                                </svg>
                            </a>
                        ))
                    }
                    {/* Hardcoding the CV link for now as it's special */}
                    <a
                        href="/cv.pdf"
                        download="Cristian_Castillo_CV.pdf"
                        class="flex items-center justify-center size-10 rounded-full bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-300 hover:bg-primary hover:text-white transition-colors"
                        aria-label="Descargar CV"
                        title="Descargar Curriculum Vitae"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="size-5"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"
                            ></path><polyline points="7 10 12 15 17 10"
                            ></polyline><line x1="12" x2="12" y1="15" y2="3"
                            ></line></svg
                        >
                    </a>
                </div>
            </div>
        </div>
        <div
            class="bg-slate-50 dark:bg-slate-900/50 flex items-center justify-center p-12 min-h-[300px]"
        >
            <div
                class="relative w-full h-full rounded-xl overflow-hidden border border-slate-200 dark:border-slate-800 shadow-2xl group"
            >
                <img
                    alt="Professional Developer Workspace"
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
                    src="/profile-3d.png"
                />
            </div>
        </div>
    </div>
</div>
