---
import { siteData } from "../../data/siteData";

const { services } = siteData;
---

<div id="services" class="mb-16">
    <h2
        class="text-3xl font-bold mb-4 px-4 text-center bg-gradient-to-r from-primary via-blue-400 to-purple-400 bg-clip-text text-transparent animate-gradient bg-[length:200%_auto] hover:scale-105 transition-transform duration-300 cursor-default reveal"
    >
        Mis Servicios
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 p-4">
        <div
            class="tilt-card flex flex-col gap-4 rounded-xl border border-slate-200 dark:border-slate-800 bg-white dark:bg-[#1c2331] p-6 hover:-translate-y-2 hover:shadow-xl transition-all duration-300 reveal delay-100"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="text-primary size-10"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
                <line x1="8" y1="21" x2="16" y2="21"></line>
                <line x1="12" y1="17" x2="12" y2="21"></line>
            </svg>
            <div>
                <h3
                    class="text-slate-900 dark:text-white text-xl font-bold mb-2"
                >
                    {services[0].title}
                </h3>
                <p
                    class="text-slate-500 dark:text-slate-400 text-sm leading-relaxed"
                >
                    {services[0].description}
                </p>
            </div>
        </div>

        <div
            class="tilt-card flex flex-col gap-4 rounded-xl border border-slate-200 dark:border-slate-800 bg-white dark:bg-[#1c2331] p-6 hover:-translate-y-2 hover:shadow-xl transition-all duration-300 reveal delay-200"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="text-primary size-10"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <rect x="5" y="2" width="14" height="20" rx="2" ry="2"></rect>
                <line x1="12" y1="18" x2="12.01" y2="18"></line>
            </svg>
            <div>
                <h3
                    class="text-slate-900 dark:text-white text-xl font-bold mb-2"
                >
                    {services[1].title}
                </h3>
                <p
                    class="text-slate-500 dark:text-slate-400 text-sm leading-relaxed"
                >
                    {services[1].description}
                </p>
            </div>
        </div>

        <div
            class="tilt-card flex flex-col gap-4 rounded-xl border border-slate-200 dark:border-slate-800 bg-white dark:bg-[#1c2331] p-6 hover:-translate-y-2 hover:shadow-xl transition-all duration-300 reveal delay-300"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="text-primary size-10"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <ellipse cx="12" cy="5" rx="9" ry="3"></ellipse>
                <path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"></path>
                <path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"></path>
            </svg>
            <div>
                <h3
                    class="text-slate-900 dark:text-white text-xl font-bold mb-2"
                >
                    {services[2].title}
                </h3>
                <p
                    class="text-slate-500 dark:text-slate-400 text-sm leading-relaxed"
                >
                    {services[2].description}
                </p>
            </div>
        </div>
    </div>
</div>
